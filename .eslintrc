{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": [
      "jsx"
    ],
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2,"never"],
    "no-unexpected-multiline": 0,
    "no-console": 1,
    "no-unused-vars": 1,
    "no-undef": 1,
    "babel/generator-star-spacing": 1,
    "babel/new-cap": 1,
    "babel/array-bracket-spacing": 1,
    "babel/object-curly-spacing": 0,
    "babel/object-shorthand": 1,
    "babel/arrow-parens": 0,
    "babel/no-await-in-loop": 1
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "shelljs": true,
    "commonjs": true,
    "shared-node-browser": true
  },
  "plugins": [
    "babel",
    "react"
  ],
  "modules": true,
  "root": true,
  "globals": {
    "__DEVELOPMENT__": true,
    "__PRODUCTION__": true,
    "APP_PATH": true,
    "DEV_SERVER_PORT": true,
    "DEV_SERVER_HOST": true,
    "ENV": true,
    "ENV_PATH": true,
    "NODE_ENV": true,
    "ROOT_PATH": true,
    "SERVER_PORT": true,
    "SERVER_HOST": true
  }
}
